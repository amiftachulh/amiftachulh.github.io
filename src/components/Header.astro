---
import { Picture } from 'astro:assets';
import profile from '../assets/profile.png';
import GitHub from '../assets/icons/github.astro';
import LinkedIn from '../assets/icons/linkedin.astro';
---

<header id="home">
  <div class="card">
    <div class="intro-wrapper">
      <div class="intro">
        <h1>Hi, I'm <span class="name">Miftah</span></h1>
        <p>
          I'm a Computer Engineering student at Diponegoro University with a strong
          passion for web development. I primarily use JavaScript technology for my
          projects. However, I'm excited to explore and learn about other
          technologies that can enhance my skills.
        </p>
      </div>
      <Picture
        src={profile}
        alt="Ahmad Miftachul Hidayat profile picture"
        class="profile-wrapper"
      />
    </div>
    <div class="social">
      <a href="https://github.com/amiftachulh" target="_blank" rel="noopener noreferrer" class="blur">
        GitHub
        <GitHub size="1.25rem" />
      </a>
      <a href="https://www.linkedin.com/in/amiftachulh/" target="_blank" rel="noopener noreferrer" class="blur">
        LinkedIn
        <LinkedIn size="1.25rem" />
      </a>
    </div>
  </div>
</header>

<style>
  header {
    display: grid;
    place-items: center;
    width: min(700px, 90%);
    min-height: 100dvh;
    margin: 1rem auto 0;
    margin-inline: auto;
    padding-block: 4rem;
  }

  .card {
    padding: 2rem;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
  }

  .intro-wrapper {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  @media (max-width: 600px) {
    .intro-wrapper {
      flex-direction: column-reverse;
      gap: 2rem;
    }
  }

  .intro {
    flex: 1;
  }

  .content {
    text-align: center;
  }

  .profile-wrapper {
    width: 10rem;
    height: 10rem;
    border: 5px solid hsl(var(--accent));
    border-radius: 50%;
  }

  h1 {
    margin-bottom: 1rem;
  }

  p {
    font-size: var(--fs);
  }

  .name {
    color: hsl(var(--accent));
  }

  .social {
    display: flex;
    flex-wrap: wrap;
    gap: .5rem;
    margin-top: 1rem;
  }

  .social a {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: .5rem;
    padding: .5rem 1rem;
    background: hsl(var(--primary));
    color: hsl(var(--primary-foreground));
    font-weight: 700;
    border: 1px solid var(--border-clr);
    border-radius: var(--radius);
    transition: background .3s ease-in-out;
  }

  .social a:hover {
    background: hsl(var(--primary-hover));
  }
</style>
