---
import { Image } from 'astro:assets';
import { projects } from '../data/projects';
import Visit from '../assets/icons/visit.astro';
import GitHub from '../assets/icons/github.astro';
---

<section id="projects">
  <h2 class="title">Projects</h2>
  <p class="subtitle">Featured projects that I have worked on.</p>
  <div class="project-wrapper">
    {projects.map((project) => (
      <div class="project">
        <div class="image-wrapper">
          <Image src={project.img} alt={project.title} class="image" />
        </div>
        <div class="info">
          <h3 class="title">{project.title}</h3>
          <div class="description">{project.description}</div>
        </div>
        <div class="source">
          <a href={project.url} target="_blank" rel="noopener noreferrer" style={{ visibility: project.url ? "visible" : "hidden" }}>
            <span class="text">Visit</span>
            <Visit />
          </a>
          <a href={project.github} target="_blank" rel="noopener noreferrer">
            <span class="text">GitHub</span>
            <GitHub size="1rem" />
          </a>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .project-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
  }

  .project {
    display: flex;
    flex-direction: column;
    background: hsl(var(--card));
    border: 1px solid hsl(var(--border));
    border-radius: var(--radius);
    overflow: hidden;
  }

  .image-wrapper {
    border-radius: var(--radius);
  }

  .image {
    height: 200px;
    object-fit: cover;
  }

  .info {
    padding: 1rem;
  }

  .title {
    font-weight: bold;
    line-height: 1.5;
  }

  .description {
    color: hsl(var(--card-foreground));
    line-height: 1.5;
  }

  .source {
    display: flex;
    justify-content: space-between;
    margin-top: auto;
    padding: 0 1rem 1rem;
    font-size: .875rem;
    font-weight: bold;
  }

  .source a {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: .3rem;
    place-items: center;
    transition: color .2s;
  }

  .source a:hover {
    color: hsl(var(--accent));
  }
</style>
